<table class="table is-striped is-fullwidth">
  <thead>
    <tr>
      <th class= "is-size-4 px-3">
        Articles
      </th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td>
        <%=link_to article.title, article%>
      </td>

      <td class="has-text-right">
        <%= link_to "Edit", edit_article_path(article), class: "button is-info is-inverted"%>
      </td>

    </tr>
    <% end %>
  </tbody>
</table>
