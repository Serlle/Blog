<h1>Articulo <%= @article.id %></h1>
  <p><%= @article.title %></p>
  <p><%= @article.body %></p>
  <ul>
    <p> <%= link_to "Edit", edit_article_path(@article) %> <%="|" %>
        <%= link_to "Delete", article_path(@article),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %> <%="|" %>
        <%= link_to "Back", "/articles" %> </p>
  </ul>

<h2>Comments</h2>
  <%= render @article.comments%>

<h2>Add a comment:</h2>
<%= render 'comments/form'%>
